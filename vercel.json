{
  "framework": "nextjs",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "stars-vacation-management.vercel.app" }],
      "destination": "https://starsvacationmanagementv2.vercel.app/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/check-pending-requests",
      "schedule": "0 9 * * *"
    },
    {
      "path": "/api/cron/pending-requests-3d",
      "schedule": "0 7 * * *"
    },
    {
      "path": "/api/cron/pending-requests-7d",
      "schedule": "10 7 * * *"
    }
  ]
}
