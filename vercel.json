{
  "framework": "nextjs",
  "buildCommand": "next build",
  "redirects": [
    {
      "source": "/(.*)",
      "has": [{ "type": "host", "value": "stars-vacation-management.vercel.app" }],
      "destination": "https://starsvacationmanagementv2.vercel.app/$1",
      "permanent": true
    }
  ],
  "crons": [
    {
      "path": "/api/cron/pending-reminder-5d",
      "schedule": "0 8 * * *"
    },
    {
      "path": "/api/cron/cleanup-test-requests",
      "schedule": "0 1 * * *"
    }
  ]
}
